      <p class="users-online">Users Online</p>
      <div class="users"></div>
    </div>
    <div class="info">
      <p>
        <span
          id="instructionLink"
          style="cursor: pointer; text-decoration: underline"
          onclick="switchShow();"
        ></span
        >&nbsp;&nbsp;
        <span
          id="reloadLink"
          style="cursor: pointer; text-decoration: underline"
          onclick="reloadMe();"
          >Reload</span
        >&nbsp;&nbsp;
        <span
          id="undoLink"
          style="cursor: pointer; text-decoration: underline"
          onclick="undoMe();"
        ></span
        >&nbsp;&nbsp;
        <span
          id="flipLink"
          style="cursor: pointer; text-decoration: underline"
          onclick="flipMe();"
        ></span
        >&nbsp;&nbsp;
        <span
          id="putFENLink"
          style="cursor: pointer; text-decoration: underline"
          onclick="putFENMe();"
        ></span>
      </p>
    </div>

    <div id="board" class="board"></div>
